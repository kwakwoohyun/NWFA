<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
						"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.skhu.NWFA.yaminGame.yaminDao.yaminDao">
	<select id="example"
		resultType="com.skhu.NWFA.yaminGame.yaminModel.syllablesModel">
		select * from Syllables order by rand() Limit #{count}
	</select>

	<select id="yaminWords"
		resultType="com.skhu.NWFA.yaminGame.yaminModel.wordsModel">
		select word_id, justice, mean, gameNub, yamin_word,
		yamin_example from
		Yamin inner
		join Word on
		Yamin.Word_word_id =
		Word.word_id and
		Yamin.yamin_id=#{yamin_id};
	</select>

	<select id="yaminStage"
		resultType="com.skhu.NWFA.yaminGame.yaminModel.stageModel">
		SELECT * FROM YaminStage WHERE User_user_id = #{user_id};
	</select>

	<select id="yaminStageAll"
		resultType="com.skhu.NWFA.yaminGame.yaminModel.stageModel">
		SELECT * FROM YaminStage
	</select>

	<update id="stageLockUpdate" parameterType="int">
		UPDATE YaminStage SET open_game = 1
		WHERE stage_id =
		#{stageId} AND User_user_id = #{userId}
	</update>

	<select id="loginUser"
		resultType="com.skhu.NWFA.user.userModel.userModel"
		parameterType="string">
		SELECT * FROM User WHERE login_id = #{login_id}
	</select>
	
</mapper>