<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skhu.NWFA.user.userDao.userDaoS">

	<select id="selectID"
		resultType="com.skhu.NWFA.user.userModel.userModel">
		select * from User where
		login_id = #{userID}
	</select>

	<insert id="insertUserStage">
		insert into UserStages
		(gameNum,stage_id,isLock,date,user_id,score)
		values
		(1,1,1,Now(),#{user_id},0),
		(1,2,0,Now(),#{user_id},0),
		(1,3,0,Now(),#{user_id},0),
		(1,4,0,Now(),#{user_id},0),
		(1,5,0,Now(),#{user_id},0),
		(1,6,0,Now(),#{user_id},0),
		(2,1,1,Now(),#{user_id},0),
		(2,2,0,Now(),#{user_id},0),
		(2,3,0,Now(),#{user_id},0),
		(2,4,0,Now(),#{user_id},0),
		(3,1,1,Now(),#{user_id},0),
		(3,2,0,Now(),#{user_id},0),
		(3,3,0,Now(),#{user_id},0),
		(3,4,0,Now(),#{user_id},0)
	</insert>

	<select id="Allwords" resultType="com.skhu.NWFA.yaminGame.yaminModel.wordsModel">
		select * from Word
	</select>
	
	<insert id="insertUserWord">
		insert into UserWords
		(gameNum,isCorrect,answer,favorite,stage_id,user_id,word_id)
		values
		(#{gameNum},0,'미입력',0,#{stage_id},#{user_id},#{word_id})
	</insert>
</mapper>