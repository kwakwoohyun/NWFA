<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skhu.NWFA.user.userDao.userDaoS">

	<select id="selectID"
		resultType="com.skhu.NWFA.user.userModel.userModel">
		select * from User where
		login_id = #{userID}
	</select>

	<insert id="insertUserStage">
		insert into UserStages
		(gameNum,stage_id,isLock,date,user_id,score)
		values
		(1,1,1,Now(),#{user_id},0),
		(1,2,0,Now(),#{user_id},0),
		(1,3,0,Now(),#{user_id},0),
		(1,4,0,Now(),#{user_id},0),
		(1,5,0,Now(),#{user_id},0),
		(2,1,1,Now(),#{user_id},0),
		(2,2,0,Now(),#{user_id},0),
		(2,3,0,Now(),#{user_id},0),
		(3,1,1,Now(),#{user_id},0),
		(3,2,0,Now(),#{user_id},0),
		(3,3,0,Now(),#{user_id},0)
	</insert>

	<insert id="insertInfo2">
		insert into SejongStage
		(User_user_id,Sejong_Word_word_id,star,open_game)
		values(#{user_id},#{i},0,0)
	</insert>

	<insert id="insertInfo3">
		insert into SejongStage
		(User_user_id,Sejong_Word_word_id,star,open_game)
		values(#{user_id},#{i},0,0)
	</insert>

	<insert id="insertYaminInfo1">
		insert into YaminStage
		(User_user_id,Yamin_Word_word_id,star,open_game)
		values(#{user_id},4,0,1)
	</insert>

	<insert id="insertYaminInfo2">
		insert into YaminStage
		(User_user_id,Yamin_Word_word_id,star,open_game)
		values(#{user_id},#{i},0,0)
	</insert>
</mapper>